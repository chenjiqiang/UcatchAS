<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="20dp"
    android:background="@color/white"
    android:orientation="vertical" >

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="你想看到的用户"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/find_seletor_sex"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <RadioButton
            android:id="@+id/find_seletor_all_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@color/transparent"
            android:checked="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="全部"
            android:textColor="@drawable/radiobutton" />

        <RadioButton
            android:id="@+id/find_seletor_man_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="男"
            android:textColor="@drawable/radiobutton" />

        <RadioButton
            android:id="@+id/find_seletor_woman_sex"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:button="@color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="女"
            android:textColor="@drawable/radiobutton" />
    </RadioGroup>

    <TextView
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:text="分享的时间"
        android:textSize="20sp" />

    <RadioGroup
        android:id="@+id/find_seletor_time"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content" >

        <RadioButton
            android:id="@+id/find_seletor_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@color/transparent"
            android:checked="true"
            android:gravity="center"
            android:padding="10dp"
            android:text="十五分钟前"
            android:textColor="@drawable/radiobutton" />

        <RadioButton
            android:id="@+id/find_seletor_two"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="三十分钟前"
            android:textColor="@drawable/radiobutton" />

        <RadioButton
            android:id="@+id/find_seletor_three"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="四十五分钟前"
            android:textColor="@drawable/radiobutton" />

        <RadioButton
            android:id="@+id/find_seletor_four"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:button="@color/transparent"
            android:gravity="center"
            android:padding="10dp"
            android:text="一个小时前"
            android:textColor="@drawable/radiobutton" />
    </RadioGroup>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/bt_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="15dp"
            android:layout_weight="1"
            android:text="取消"
            android:textColor="@drawable/radiobutton" />

        <Button
            android:id="@+id/bt_ok"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="15dp"
            android:layout_weight="1"
            android:text="确定"
            android:textColor="@drawable/radiobutton" />
    </LinearLayout>

</LinearLayout>