<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_vertical"
    android:background="@color/red" >

    <RelativeLayout
        android:id="@+id/title_relative"
        android:layout_width="match_parent"
        android:layout_height="@dimen/top_title_bar_height"
        android:paddingLeft="10dp"
        android:paddingRight="10dp" >

        <ImageView
            android:id="@+id/leftimageview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/common_imageview_contentDescription"
            android:src="@drawable/title_bar_back_normal"
            android:textColor="@color/common_title_text"
            android:textSize="@dimen/common_title_text_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/titletext"
            style="@style/common_FontShadow_textview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerInParent="true"
            android:layout_centerVertical="true"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/common_title_text"
            android:textSize="@dimen/common_title_text_size" />

        <ImageView
            android:id="@+id/rightpraise"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/rightcollect"
            android:contentDescription="@string/common_imageview_contentDescription"
            android:src="@drawable/title_bar_praise_normal"
            android:textColor="@color/common_title_text"
            android:textSize="@dimen/common_title_text_size"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/rightcollect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginRight="40dp"
            android:layout_toLeftOf="@+id/rightshare"
            android:contentDescription="@string/common_imageview_contentDescription"
            android:src="@drawable/title_bar_collect_normal"
            android:textColor="@color/common_title_text"
            android:textSize="@dimen/common_title_text_size"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/rightshare"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:contentDescription="@string/common_imageview_contentDescription"
            android:src="@drawable/common_top_navigate_collect_selector"
            android:textColor="@color/common_title_text"
            android:textSize="@dimen/common_title_text_size"
            android:visibility="visible" />

        <TextView
            android:id="@+id/rightTextView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:textColor="@color/myvoice_edit_submit"
            android:textSize="@dimen/common_title_text_size"
            android:visibility="gone" />
    </RelativeLayout>

    <View
        android:id="@+id/divide_line"
        android:layout_width="match_parent"
        android:layout_height="0.8dip"
        android:layout_below="@id/title_relative"
        android:visibility="gone"
        android:background="@color/common_title_bottom_divide_line_bg" />

</RelativeLayout>