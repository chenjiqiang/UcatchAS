<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:id="@+id/ll_message_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_margin="10dp" >

        <TextView
            android:id="@+id/my_message_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_half"
            android:textSize="@dimen/common_middle_textsize" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_middle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="6dp"
        android:layout_toLeftOf="@id/ll_message_right"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/tv_message_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@color/black"
            android:textSize="@dimen/common_large_textsize" />

        <TextView
            android:id="@+id/tv_message_location"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@drawable/edit_location"
            android:text="sssc"
            android:textColor="@color/black_half"
            android:textSize="@dimen/common_middle_textsize" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/mymessage_praise"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/common_praise_done"
                android:textColor="@color/black"
                android:textSize="@dimen/common_middle_textsize" />

            <TextView
                android:id="@+id/mymessage_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:drawableLeft="@drawable/common_comment_icon"
                android:textColor="@color/black"
                android:textSize="@dimen/common_middle_textsize" />

            <TextView
                android:id="@+id/mymessage_share"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:drawableLeft="@drawable/common_praise_done"
                android:textColor="@color/black"
                android:textSize="@dimen/common_middle_textsize" />
        </LinearLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_below="@id/ll_middle"
        android:layout_marginTop="8dp"
        android:background="@color/grey" />

</RelativeLayout>